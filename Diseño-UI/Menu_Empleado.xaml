                <DropShadowEffect/>
            </Controls:Tile.Effect>
            <Image x:Name="image_Copy" Source="img/sinventario.png" Height="163" Width="188" />
        </Controls:Tile>
        <Controls:Tile x:Name="tile_venta" Title="Venta"  Margin="36,78,862,50" Height="Auto" Width="Auto" Click="tile_venta_Click" Background="#FFD32626"  >
            <Controls:Tile.Effect>
                <DropShadowEffect/>
            </Controls:Tile.Effect>
            <Image x:Name="image" Height="277" Width="188" Source="img/carro.png" />
        </Controls:Tile>
        <Controls:Tile x:Name="tile_producto1" Title="Producto" Margin="904,78,56,357" Height="Auto" Width="Auto" Click="tile_producto1_Click" Background="#FFD32626"  >
            <Controls:Tile.Effect>
                <DropShadowEffect/>
            </Controls:Tile.Effect>
            <Image x:Name="image_Copy1" Source="img/bolsas-de-la-compra.png" Height="131" Width="188" />
        </Controls:Tile>
        <Controls:Tile x:Name="tile_provedor" Title="Proveedor" Margin="354,330,600,50" Height="Auto" Width="Auto" RenderTransformOrigin="0.548,0.125" BorderBrush="Black" Click="tile_provedor_Click" Background="#FFD32626"  >
            <Controls:Tile.Effect>
                <DropShadowEffect/>
            </Controls:Tile.Effect>
            <Image x:Name="image_Copy2" Source="img/abastecimiento.png" Height="163" Width="188" />

        </Controls:Tile>
        <Controls:Tile x:Name="tile_presentacion" Title="Presentacion" Margin="632,330,333,50" Height="Auto" Width="Auto" Click="tile_presentacion_Click" Background="#FFD32626"  >
            <Controls:Tile.Effect>
                <DropShadowEffect/>
            </Controls:Tile.Effect>
            <Image x:Name="image_Copy3" Source="img/productos.png" Height="121" Width="188" />
        </Controls:Tile>
        <Controls:Tile x:Name="tile_tipo" Title="Tipo" Margin="904,330,56,50" Height="Auto" Width="Auto" Click="tile_tipo_Click" Background="#FFD32626"  >
            <Controls:Tile.Effect>
                <DropShadowEffect/>
            </Controls:Tile.Effect>
            <Image x:Name="image_Copy4" Source="img/granja.png" Height="127" Width="188" />
        </Controls:Tile>

    </Grid>
</Controls:MetroWindow>

