            </Border.Background>
            <Button x:Name="btnclosesalir" Content="X" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="94" Background="{x:Null}" Height="53" FontSize="22" BorderBrush="{x:Null}" Margin="1085,-1,-1,-1" FontWeight="Bold" Click="btnclosesalir_Click" />
        </Border>
        <Controls:Tile x:Name="tile_inventario" Title="Inventario" FontSize="20" Margin="354,78,333,357" Height="Auto" Width="Auto" Click="tile_inventario_Click" Background="#FFD32626"  >
