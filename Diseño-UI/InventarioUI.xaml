        <Label Content="Nombre" HorizontalAlignment="Left" Height="47" Margin="64,57,0,0" VerticalAlignment="Top" Width="103" FontWeight="Bold" FontSize="16" RenderTransformOrigin="0.194,2.553"/>
        <GroupBox x:Name="gbproveedor" Header="Proveedor"  Visibility="Hidden" HorizontalAlignment="Left" Height="317" Margin="182,152,0,0" VerticalAlignment="Top" Width="487" BorderBrush="Black" OpacityMask="Black" Background="#FF878989" Foreground="{x:Null}"  >
