                <DataGridTemplateColumn Header="imagen">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding imagen}" Width="50" Height="50" Stretch="Fill"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Binding="{Binding DataProducto}" Header="producto" />
                <DataGridTextColumn Binding="{Binding Cantidad}" Header="Cantida" />
                <DataGridTextColumn Binding="{Binding Precio}" Header="precio" />
                <DataGridTextColumn Binding="{Binding DataProveedor}" Header="Proveedor" />
                <DataGridTextColumn Binding="{Binding Datasexo}" Header="Genero" />
                <DataGridTextColumn Binding="{Binding fecha_e}" Header="fecha_empaquetado" />
                <DataGridTextColumn Binding="{Binding descripcion}" Header="DESCRIPCION" />
            </DataGrid.Columns>
        </DataGrid>
        <Label Content="* Producto:" HorizontalAlignment="Left" Height="47" Margin="10,322,0,0" VerticalAlignment="Top" Width="103" FontWeight="Bold" FontSize="16"/>
        <Label Content="* Cantidad:" HorizontalAlignment="Left" Height="40" Margin="388,316,0,0" VerticalAlignment="Top" Width="103" FontWeight="Bold" FontSize="16" RenderTransformOrigin="0.485,1.766"/>
     
