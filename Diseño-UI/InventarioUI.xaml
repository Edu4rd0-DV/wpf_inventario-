        <Button Content="Agregar" HorizontalAlignment="Left" Height="47" Margin="20,535,0,0" VerticalAlignment="Top" Width="135" RenderTransformOrigin="0.5,0.5" FontSize="14" FontWeight="Bold" Background="#FFD32626" Click="Button_Click_1">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-1.79"/>
                    <RotateTransform/>
                    <TranslateTransform X="5.469" Y="5"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button Name="BtnEliminar" Content="Eliminar" HorizontalAlignment="Left" Height="49" Margin="370,532,0,0" VerticalAlignment="Top" Width="131" RenderTransformOrigin="0.614,0.592" FontSize="14" FontWeight="Bold" Background="#FFD32626" Click="Button_Click_2">
