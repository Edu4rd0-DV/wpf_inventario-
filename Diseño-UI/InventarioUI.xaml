                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform X="5" Y="5"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <TextBox x:Name="txtprecio" HorizontalAlignment="Left" Height="40" Margin="122,368,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="168" BorderThickness="0,0,0,1" FontSize="18" BorderBrush="Black"/>
        <Label Content="* Fecha Fabricacion:" HorizontalAlignment="Left" Height="47" Margin="393,437,0,0" VerticalAlignment="Top" Width="167" FontWeight="Bold" FontSize="16" RenderTransformOrigin="-1.748,6.723"/>
        <Label Content="* Genero:" HorizontalAlignment="Left" Height="42" Margin="10,437,0,0" VerticalAlignment="Top" Width="90" FontWeight="Bold" FontSize="16"/>
        <Button Content="+" HorizontalAlignment="Left" Height="40" Margin="691,374,0,0" VerticalAlignment="Top" Width="55" RenderTransformOrigin="0.6,1.762" FontSize="20" Click="Button_Click"/>
        <Button x:Name="btnactualizar" Content="Actualizar" HorizontalAlignment="Left" Height="49" Margin="204,532,0,0" VerticalAlignment="Top" Width="131" RenderTransformOrigin="0.5,0.5" FontSize="14" FontWeight="Bold" Background="#FFD32626" Click="btnactualizar_Click" >
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform X="5" Y="5"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="btnlimpiar" Content="Limpiar" HorizontalAlignment="Left" Margin="536,536,0,0" VerticalAlignment="Top" Width="133" FontSize="14" FontWeight="Bold" Background="#FFD32626" Height="49" Click="btnlimpiar_Click"/>
        <Image x:Name="image" HorizontalAlignment="Left" Height="206" Margin="1086,273,0,0" VerticalAlignment="Top" Width="185" Source="img/produc.png" IsEnabled="False" OpacityMask="#FFFFD3D3"/>
        <TextBox x:Name="txtUrl" IsEnabled="False" HorizontalAlignment="Left" Height="45" Margin="1081,484,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="185" BorderThickness="0,0,0,1" BorderBrush="Black" FontSize="18"/>
        <Button x:Name="btnBuscarImagen" Content="Buscar Imagen" HorizontalAlignment="Left" Margin="1077,546,0,0" VerticalAlignment="Top" Width="185" RenderTransformOrigin="0.333,0.926" Height="35" Click="btnBuscarImagen_Click" Background="#FFD32626"/>


