                    <ColumnDefinition Width="523*"/>
                    <ColumnDefinition Width="10*"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="txtprove"  Controls:TextBoxHelper.Watermark="Nombre"   HorizontalAlignment="Left" Height="37" Margin="188,42,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="140" FontSize="18" BorderThickness="0,0,0,1" BorderBrush="Black"/>
                <Label Content="* Nombre" HorizontalAlignment="Left" Height="37" Margin="95,42,0,0" VerticalAlignment="Top" Width="140" FontWeight="Bold" FontSize="16"/>
                <Button Content="Agregar" HorizontalAlignment="Left" Margin="133,213,0,0" VerticalAlignment="Top" Width="134" Background="#FFD32626" Height="42" FontSize="14" Click="Button_Click_3"/>
                <Label Content="* Contacto" HorizontalAlignment="Left" Height="37" Margin="93,97,0,0" VerticalAlignment="Top" Width="140" FontWeight="Bold" FontSize="16" RenderTransformOrigin="0.5,0.5">
